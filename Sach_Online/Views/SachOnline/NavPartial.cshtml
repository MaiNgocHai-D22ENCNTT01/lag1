<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<head>
    <link rel="stylesheet" href="~/Content/Demo.css">
</head>
<nav class="navbar navbar-default" style="background-color: black">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">SachOnline</a>
        </div>

      

                <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav" style="display: flex; flex-wrap: nowrap;">
                <li><a href="#">Giới Thiệu</a></li>
                <li><a href="#">Liên Hệ</a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Sách theo chủ đề <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        @foreach (var chuDe in Model.ChuDeList)
                        {
                            <li><a href="@Url.Action("SachTheoChuDe", "SachOnline", new { id = chuDe.MaCD })">@chuDe.TenChuDe</a></li>
                        }
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Sách theo NXB <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        @foreach (var NXB in Model.NXBList)
                        {
                            <li><a href="@Url.Action("SachTheoNXB", "SachOnline", new { id = NXB.MaNXB })">@NXB.TenNXB</a></li>
                        }
                    </ul>
                </li>
            </ul>

            <!-- Search Form -->
            <form class="navbar-form navbar-left" action="@Url.Action("TimKiem", "SachOnline")" method="get">
                <div class="form-group">
                    <input type="text" class="form-control" name="keyword" placeholder="Search">
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>


            <ul class="nav navbar-nav navbar-right" style="display: flex; flex-wrap: nowrap;">
                <li>
                    @Html.Action("GioHangPartial", "GioHang")
                </li>
             </ul>
                
                <!-- Login and Register Icons -->
                <ul class="nav navbar-nav navbar-right" style="display: flex; flex-wrap: nowrap;">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fas fa-user"></i> User <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="@Url.Action("DangNhap", "User")">
                                    <i class="fas fa-sign-in-alt"></i> Log in
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("DangKy", "User")">
                                    <i class="fas fa-user-plus"></i> Register
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
        </div>

</nav>
        <!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>
