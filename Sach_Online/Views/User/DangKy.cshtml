@model Sach_Online.Models.KHACHHANG
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<head>
    <link rel="stylesheet" href="~/Content/Demo.css">
</head>
<h4>@ViewBag.ThongBao</h4>

<h2 class="text-center">ĐĂNG KÝ THÀNH VIÊN</h2>

@using (Html.BeginForm("DangKy", "User"))
{
    @Html.ValidationSummary(true)

<table>
    <tr>
        <td>Họ tên:</td>
        <td>@Html.TextBox("HoTen", null, new { @class = "form-control" }) @ViewData["err1"]</td>
    </tr>
    <tr>
        <td>Tên đăng nhập:</td>
        <td>@Html.TextBox("TaiKhoan", null, new { @class = "form-control" }) @ViewData["err2"]</td> 
    </tr>

    <tr>
        <td>Mật khẩu:</td>
        <td>@Html.Password("MatKhau", new { @class = "form-control" }) @ViewData["err3"]</td>
    </tr>
    <tr>
        <td>Mật khẩu nhập lại:</td>
        <td>@Html.Password("MatKhauNL", new { @class = "form-control" }) @ViewData["err4"]</td>
    </tr>
    <tr>
        <td>Email:</td>
        <td>@Html.TextBox("Email", null, new { @type = "email", @class = "form-control" }) @ViewData["err5"]</td>
    </tr>
    <tr>
        <td>Điện thoại:</td>
        <td>@Html.TextBox("DienThoai", null, new { @type = "tel", @class = "form-control" }) @ViewData["err6"]</td>
    </tr>
    <tr>
        <td>Ngày sinh:</td>
        <td><input type="date" name="NgaySinh" class="form-control" /></td>
    </tr>
    <tr>
        <td>Địa chỉ:</td>
        <td><input type="text" name="DiaChi" class="form-control" /></td>
    </tr>
    <tr>
        <td></td>
        <td>
            <input type="submit" value="Đăng ký" />
            <input type="reset" value="Xóa Thông Tin" />
        </td>
    </tr>
</table>
}
